<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:baselineAligned="false"
    tools:context=".EditRosters">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:baselineAligned="false"
        android:orientation="horizontal"
        tools:context=".Stats">

        <TextView
            android:id="@+id/leftTeam"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="10"
            android:ellipsize="none"
            android:gravity="start"
            android:singleLine="true"
            android:text="@string/str_DefaultLeftTeam"
            android:textSize="30sp" />
        <!--android:inputType="text"-->

        <TextView
            android:id="@+id/rightTeam"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="10"
            android:ellipsize="none"
            android:gravity="end"
            android:singleLine="true"
            android:text="@string/str_DefaultRightTeam"
            android:textSize="30sp" />
        <!--android:inputType="text"-->

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutTop"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:baselineAligned="false"
        android:orientation="horizontal"
        tools:context=".Stats">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:text="Edit the rosters to reflect who is here" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:orientation="horizontal"
        tools:context=".Stats">

        <org.ocua.parity.customLayout.CustomLinearLayout
            android:id="@+id/layoutLeftNames"
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            tools:context=".Stats">

        </org.ocua.parity.customLayout.CustomLinearLayout>

        <Space
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <org.ocua.parity.customLayout.CustomLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                         xmlns:tools="http://schemas.android.com/tools"
                                                         android:id="@+id/layoutRightNames"
                                                         android:layout_width="200dp"
                                                         android:layout_height="fill_parent"
                                                         android:layout_weight="10"
                                                         android:orientation="vertical"
                                                         tools:context=".Stats">

        </org.ocua.parity.customLayout.CustomLinearLayout>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/layoutBottom"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:baselineAligned="false"
        android:orientation="horizontal"
        tools:context=".Stats">

        <Button
            android:id="@+id/btnAddPlayer"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="Add Player" />

        <Button
            android:id="@+id/btnAddSubPlayer"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="Add Substitute" />

        <Button
            android:id="@+id/btnFinish"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="Finish" />

    </LinearLayout>

</LinearLayout>
